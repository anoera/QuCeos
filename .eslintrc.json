{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"linebreak-style": ["error", "unix"],
		"quotes": ["warn", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
		"semi": ["error", "always"]
	}
}
